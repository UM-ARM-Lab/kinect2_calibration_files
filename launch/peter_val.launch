<launch>
  <include file="$(find kinect2_calibration_files)/launch/kinect2_bridge_roof.launch"/>
  <include file="$(find kinect2_calibration_files)/launch/kinect2_bridge_tripodA.launch"/>

  <include file="$(find lightweight_vicon_bridge)/launch/vicon_bridge.launch"/>

  <node pkg="tf2_ros" type="static_transform_publisher" name="kinect2_roof_mocap_tf_shim_broadcaster" required="true"
        args="0.10647 -0.00546 0.01839 -0.02449 0.05631 -0.13803
              mocap_kinect2_roof_kinect2_roof kinect2_roof_link">
  </node>

    <node pkg="tf2_ros" type="static_transform_publisher" name="kinect2_tripodA_mocap_tf_shim_broadcaster" required="true"
          args="0.06214 0.00665 -0.00698 -0.03611 -0.06405 0.02344
                mocap_kinect2_tripodA_kinect2_tripodA kinect2_tripodA_link"/>

  <include file="$(find lightweight_vicon_bridge)/launch/mocap_to_val_static_transform.launch"/>

  <node pkg="link_bot_perception" type="merge_pointclouds" name="merge_pointclouds" output="screen"
            args="points1:=/kinect2_tripodA/qhd/points points2:=/kinect2_roof/qhd/points"/>
</launch>
